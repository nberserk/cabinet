{
  "name": "tab-hierarchy-visualizer",
  "version": "1.0.0",
  "description": "Chrome extension for visualizing tab hierarchies",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/styles.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./dist/styles.css --minify",
    "build-extension": "node scripts/build-extension.js",
    "create-zip": "node scripts/create-zip.js",
    "package": "npm run build-extension && npm run create-zip",
    "dev-help": "node scripts/dev-reload.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "build-react": "webpack --config webpack.react.js",
    "dev-react": "tsc --project tsconfig.react.json --watch",
    "build-react-sidepanel": "npm run build-react && npm run build-css-prod",
    "test-react-build": "node scripts/test-react-build.js",
    "dev-server": "node scripts/dev-server.js",
    "switch-sidepanel": "node scripts/switch-sidepanel.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}
